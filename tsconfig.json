{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "module": "commonjs",
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "core/**/*",
    "src/**/*",
    "spec/**/*"
  ],
  "exclude": ["node_modules"]
}
